<%- include("./partials/header.ejs") -%>

<div class="d-flex justify-content-center align-items-center flex-column w-50 h-50">
    <h2 class="mb-4">Vista de productos</h2>
     
    <% if (mostrarProductos.length === 0) { %>
        <div class="alert alert-warning" role="alert">
            No hay productos agregados!
        </div>
    <% } else { %>
        <table class="table table-hover border">
        <thead>
            <tr>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody>
            <% for (producto of mostrarProductos) { %>
                <tr>
                <th><%= producto.title %></th>
                <th><%= producto.price %></th>
                <th><img src=<%= producto.thumbnail %> height="30px" width="30px" alt=""></th>
                </tr>
            <% } %>
        </tbody>
        </table>
    <% } %>
  
    <a href="http://localhost:3001/" class="btn btn-primary mt-4" role="button">Agregar m√°s productos</a>
</div>

<%- include("./partials/footer.ejs") -%>